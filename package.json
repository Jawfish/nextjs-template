{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --bun run next dev --turbopack",
    "build": "bun --bun run next build",
    "start": "bun --bun run next start",
    "lint": "bun --bun run biome check",
    "fix": "bun --bun run biome check --fix --unsafe",
    "typecheck": "tsc --noEmit",
    "test": "bun run vitest --reporter=verbose",
    "test:ui": "bun run vitest --ui --open",
    "coverage": "bun run vitest run --coverage"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "bun": "^1.3.4",
    "next": "16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.1",
    "vitest": "^4.0.15",
    "web-tree-sitter": "^0.26.3"
  }
}
