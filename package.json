{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --bun run next dev --turbopack",
    "build": "bun --bun run next build",
    "start": "bun --bun run next start",
    "lint": "bun --bun run biome check",
    "fix": "bun --bun run biome check --fix --unsafe",
    "typecheck": "tsc --noEmit",
    "test": "bun run vitest --reporter=verbose",
    "test:ui": "bun run vitest --ui --open"
  },
  "dependencies": {
    "bun": "^1.3.4",
    "next": "16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.15",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "web-tree-sitter": "^0.25.10"
  }
}
